<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

        <include
            layout="@layout/app_bar_short_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"/>


        <LinearLayout
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/video_container"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/audio_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

            <FrameLayout
                android:id="@+id/transcript_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"/>
        </LinearLayout>

        <include
            android:id="@+id/transcript_divider"
            layout="@layout/divider_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/description"/>

        <FrameLayout
            android:id="@+id/recorder_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

        <include
            android:id="@+id/recorder_divider"
            layout="@layout/divider_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/recorder_container"/>

        <com.example.elmbay.manager.TouchImageView
            android:layout_below="@id/transcript_divider"
            android:layout_above="@id/recorder_divider"
            android:id="@+id/transcript"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/change_channel_01_tx"
            android:visibility="gone"/>

</RelativeLayout>
