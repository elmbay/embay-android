<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mouth"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/mouth"
        android:cropToPadding="false"
        android:adjustViewBounds="false"/>

    <include
        layout="@layout/divider_vertical"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <RelativeLayout
            android:id="@+id/record_buttons"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/record_start"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/record"/>

            <ImageButton
                android:id="@+id/record_stop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@mipmap/record_stop"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/replay"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:scaleType="fitCenter"
            android:src="@mipmap/play_blue"/>

        <ImageButton
            android:id="@+id/share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:scaleType="fitCenter"
            android:src="@mipmap/share_blue"/>

        <ImageButton
            android:id="@+id/delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@drawable/circle"
            android:scaleType="fitCenter"
            android:src="@mipmap/delete_blue"/>
    </LinearLayout>

</LinearLayout>
